<%= stylesheet_link_tag 'team_show' %>
<img src="<%= asset_path("flags/" + @team.country_code + ".png") %>" class="flag" >

<h1 class="teamname"><%= @team.name %></h1>
<br>

<table id="scrim-challenges">
  <%= render partial: "./scrims/scrim", collection: @scrims %>
</table>

<%= render partial: "./scrims/new_scrim" %>

<h2 class="roster-title">Roster:</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Name:</th>
    </tr>
  </thead>
  <tbody>
  <% @team.players.each do |player| %>
    <tr>
      <td><img class="avatar" src="<%= player.avatar_url%>" ></td>
      <td><%= player.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

